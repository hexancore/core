{
  "name": "@hexancore/core",
  "version": "0.15.0",
  "engines": {
    "node": ">=22"
  },
  "engine-strict": true,
  "description": "Full-Stack TypeScript Framework for building epic HexArch designed applications",
  "homepage": "https://hexancore.dev",
  "author": "Andrzej Wasiak",
  "license": "MIT",
  "type": "commonjs",
  "exports": {
    ".": {
      "default": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./testing": {
      "default": {
        "types": "./lib/Test/index.d.ts",
        "default": "./lib/Test/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexancore/core.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -fr lib && nest -p tsconfig.build.json build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --config .jestrc.json --runInBand",
    "test:clearCache": "jest --config .jestrc.json --clearCache",
    "test:unit": "jest --config .jestrc.json --runInBand  --group=unit",
    "test:watch": "jest --config .jestrc.json --runInBand --watchAll",
    "test:cov": "jest --config .jestrc.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config .jestrc.json --runInBand",
    "prepublish": "yarn run build"
  },
  "peerDependencies": {
    "@hexancore/common": "^0.14.0",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.3.9",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/platform-fastify": "^10.3.9",
    "@nestjs/swagger": "^7.1.8",
    "nestjs-cls": "^4.3.0"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/middie": "^8.3.0",
    "@fastify/multipart": "8.3.0",
    "@fastify/static": "^7.0.0",
    "@fastify/swagger": "8.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "deep-equal": "^2.2.3",
    "dotenv": "^16.0.3",
    "fastest-validator": "^1.18.0",
    "fastify": "4.27.0",
    "file-type": "16.5.4",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "path-to-regexp": "^6.2.2",
    "process-warning": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sodium-native": "^4.0.4",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@hexancore/common": "^0.14.0",
    "@hexancore/mocker": "^1.1.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.3.9",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/platform-fastify": "^10.3.9",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/testing": "^10.3.9",
    "@swc/core": "^1.3.101",
    "@swc/jest": "^0.2.29",
    "@types/benchmark": "^2.1.4",
    "@types/connect": "^3.4.38",
    "@types/jest": "29.0.*",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "axios": "^1.5.1",
    "axios-mock-adapter": "^1.22.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.3.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "29.6.*",
    "jest-docblock": "29.4.*",
    "jest-expect-message": "^1.1.3",
    "jest-runner": "29.6.*",
    "jest-runner-groups": "^2.2.0",
    "nestjs-cls": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "string.prototype.matchall": "^4.0.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-paths-esm-loader": "^1.4.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.0",
    "typescript": "5.3.3"
  },
  "bugs": {
    "url": "https://github.com/hexancore/core/issues"
  },
  "packageManager": "yarn@4.1.0"
}
